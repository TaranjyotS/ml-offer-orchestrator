      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Run All Services",
      "configurations": [
        "Member Data (8001)",
        "Prediction (8002)",
        "Offer Engine (8003)",
        "Orchestrator (8000)"
      ],
      "stopAll": true
    }
  ]
}
